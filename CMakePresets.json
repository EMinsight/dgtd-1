{
    "version": 6,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "gnu",
        "displayName": "Configure GNU release build",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "generator": "Unix Makefiles",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": {
            "type": "FILEPATH",
            "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
          },
          "MFEM_DIR": {
            "type": "FILEPATH",
            "value": "$env{MFEM_DIR}"
          },
          "CMAKE_BUILD_TYPE": {
            "type": "STRING",
            "value": "Release"
          }
        }
      }
    ],
    "buildPresets": [
      {
        "name": "gnu",
        "configurePreset": "gnu",
        "displayName": "Build with GNU"
      }
    ]
  }